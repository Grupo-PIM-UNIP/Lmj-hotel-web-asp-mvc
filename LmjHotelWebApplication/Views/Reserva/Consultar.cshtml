@model IEnumerable<LmjHotelWebApplication.Models.Reserva>

@{
    ViewData["title"] = "Minhas Reservas";
}

<div class="mt-4">
    <h4>@ViewData["title"]</h4>
    <div>
        <div class="panel panel-primary">
            <div class="panel-body">
                <table class="table table-striped table-hover mt-3">
                    <thead>
                        <tr class="success">
                            <th>
                                @Html.DisplayNameFor(model => model.DataInicio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataFim)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quarto.Numero)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pagamento.Valor)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataFim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quarto.Numero)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pagamento.Valor)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
