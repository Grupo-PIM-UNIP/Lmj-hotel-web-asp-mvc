@model LmjHotelWebApplication.Models.ViewModels.ReservaFormViewModel

@{
    ViewData["title"] = "Formulário de reserva";
}

<div class="d-flex justify-content-center mt-4 mr-5">
    <img class="icone-reserva" src="~/images/icone-reserva-hotel.jpg" />
</div>

<div>
    <form asp-action="Cadastrar" class="mt-4">
        <div class="form-group ">
            <div class="col-md-6 offset-md-3">
                <label>Início da hospedagem</label>
                <input asp-for="Reserva.Inicio" class="form-control">
                <span asp-validation-for="Reserva.Inicio" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-6 offset-md-3">
                <label>Término da hospedagem</label>
                <input asp-for="Reserva.Fim" class="form-control">
                <span asp-validation-for="Reserva.Fim" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <fieldset class="border">
                    <legend>Deseja ficar hospedado em:</legend>
                    <div class="form-group ml-2">
                        <input asp-for="Quarto.Categoria" type="radio" name="categoria" value="2">
                        <span class="ml-1">Apartamento</span>
                    </div>
                    <div class="form-group ml-2">
                        <input asp-for="Quarto.Categoria" type="radio" name="categoria" value="1">
                        <span class="ml-1">Suíte</span>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label>Total a pagar</label>
                <div class="input-group input-group-prepend">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" readonly>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-6 offset-md-3">
                <label>Quantidades de parcelas</label>
                <input asp-for="Pagamento.QtdParcelas" class="form-control">
                <span asp-validation-for="Pagamento.QtdParcelas" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3 mt-4">
                <input type="submit" value="Solicitar Reserva" class="btn btn-config">
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}