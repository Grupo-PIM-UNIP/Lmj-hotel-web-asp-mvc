@{
    ViewData["Title"] = "Home Page";
}

<!-- Início da área das imagens em slide carousel -->
<div class="d-md-flex justify-content-center">
    <!-- Início carousel slide -->
    <div id="carousel-controles" class="carousel slide" data-ride="carousel">
        <!-- Início Carousel Inner -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/hotel.png">
                <div class="carousel-caption">
                    <p>Área externa do hotel</p>
                    <a href="#conteudo-home">Descubra mais</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/suitesb.jpg">
                <div class="carousel-caption">
                    <p>Suíte do hotel</p>
                    <a href="#conteudo-home">Descubra mais</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/suites.jpg">
                <div class="carousel-caption">
                    <p>Apartamento do hotel</p>
                    <a href="#conteudo-home">Descubra mais</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/fitness-center.jpeg">
                <div class="carousel-caption">
                    <p>Academia do hotel</p>
                    <a href="#conteudo-home">Descubra mais</a>
                </div>
            </div>
        </div><!-- Final Carousel Inner -->
        <!-- Controles carousel próximo -->
        <a href="#carousel-controles" class="carousel-control-prev" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>

        <!-- Controles carousel anterior -->
        <a href="#carousel-controles" class="carousel-control-next" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div><!-- Final carousel slide -->
</div><!-- Final da área das imagens em slide carousel -->
<!-- Início da área dos conteúdos textuais -->
<div id="conteudo-home">
