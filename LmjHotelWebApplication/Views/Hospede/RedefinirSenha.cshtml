@model LmjHotelWebApplication.Models.ViewModels.ResetaSenhaViewModel

@{
    ViewData["title"] = "Resetar senha";
}

<div>
    <div class="d-flex justify-content-center mt-5">
        <img src="~/images/person.jpg" class="user-icone" />
        <h3 class="ml-4 mt-3">@ViewData["title"]</h3>
    </div>

    <!-- Inicio do Form de Redefinição de senha -->
    <form asp-action="RedefinirSenha">
        <div class="form-group mt-4">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Digite seu Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" class="form-control" placeholder="Digite sua nova senha de acesso" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="ConfirmarSenha"></label>
                <input asp-for="ConfirmarSenha" class="form-control" placeholder="Confirme sua nova senha de acesso" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3 mt-4">
                <input type="submit" value="Confirmar" class="btn btn-config" />
            </div>
        </div>
    </form> <!-- Final do Form de Redefinição de senha -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}