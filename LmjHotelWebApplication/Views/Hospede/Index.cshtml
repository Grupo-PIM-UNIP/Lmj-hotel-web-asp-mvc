<div class="d-flex justify-content-center mt-5">
    <img src="~/images/person.jpg" class="user-icone" />
    <h3 class="ml-4 mt-3">Login</h3>
</div>

<!-- Inicio do Form de Login -->
<form>
    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <label> Email </label>
            <input type="password" name="" class="form-control" placeholder="Digite seu Email">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <label> Senha </label>
            <input type="password" name="" class="form-control" placeholder="Digite a sua senha de acesso">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <input type="submit" value="Login" class="btn btn-config" name="">
        </div>
    </div>
</form><!-- Final do Form de Login -->

<!-- Links para cadastro e redefinir senha abaixo do botão de Login -->
<div id="links-abaixo-login" class="col-md-6 offset-md-3">
    <a asp-action="Cadastro">Cadastre-se</a>
    <a asp-action="" class="ml-5">Esqueçi minha senha</a>
</div>
