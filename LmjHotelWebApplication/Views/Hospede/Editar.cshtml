@model LmjHotelWebApplication.Models.Hospede

@{
    ViewData["title"] = "Editar dados";
}

<div>
    <div class="d-flex justify-content-center mt-4">
        <img src="~/images/person.jpg" class="user-icone" />
        <h4 class="ml-4 mt-3">@ViewData["title"]</h4>
    </div>

    <!--Inicio do Formulário edição de dados -->
    <form asp-action="Editar" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Senha" />
        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Sobrenome"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Cpf"></label>
                <input asp-for="Cpf" class="form-control " readonly />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Telefone"></label>
                <input asp-for="Telefone" class="form-control" 
                      onkeypress="return permitirSomenteNumeros();" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="CartaoCredito"></label>
                <input asp-for="CartaoCredito" class="form-control" 
                       onkeypress="return permitirSomenteNumeros();" />
                <span asp-validation-for="CartaoCredito" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <input type="submit" value="Salvar" class="btn btn-config" />
            </div>
        </div>
    </form><!--Final do Formulário de edição de dados -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}